# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# See: https://editorconfig.org

root = true

# Default settings for all files
# Note: end_of_line is not set, letting Git handle EOL conversion (core.autocrlf)
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# JavaScript files
[*.js]
indent_style = tab
indent_size = 4

# CSS files
[*.css]
indent_style = tab
indent_size = 4

# HTML files
[*.html]
indent_style = tab
indent_size = 4

# Velocity templates
[*.vm]
indent_style = tab
indent_size = 4

# XML files (Maven POM, etc.)
[*.xml]
indent_style = tab
indent_size = 4

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Groovy files (verification scripts)
[*.groovy]
indent_style = tab
indent_size = 4
