<!--
	Site descriptor for Maven Site Plugin 4.x
	Uses the new namespace: http://maven.apache.org/SITE/2.0.0
	The root element is now <site> instead of <project>
	The $site variable is used instead of $decoration in Velocity templates
-->
<site name="${project.name}" xmlns="http://maven.apache.org/SITE/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SITE/2.0.0 https://maven.apache.org/xsd/site-2.0.0.xsd">

	<skin>
		<groupId>org.sentrysoftware.maven</groupId>
		<artifactId>sentry-maven-skin</artifactId>
		<version>${skinVersion}</version>
	</skin>

	<custom>
		<projectVersion>${project.version}-site4</projectVersion>
		<bodyClass>sentry-green</bodyClass>
		<keywords>site4,maven,test,documentation</keywords>
		<googleAnalyticsAccountId>SITE4_GOOGLE_ID</googleAnalyticsAccountId>
		<additionalLinks>
			<link>
				<name>License</name>
				<href>https://example.org/license.html</href>
			</link>
			<link>
				<name>Contact</name>
				<href>https://example.org/contact.html</href>
			</link>
		</additionalLinks>
		<social>
			<twitter>MavenProject</twitter>
			<linkedin>apache-maven</linkedin>
		</social>
	</custom>

	<!-- In site.xml 2.0.0, bannerLeft and bannerRight use the <image> sub-element -->
	<bannerLeft name="Banner Left" href="https://example.org">
		<image src="images/icon.png" alt="Banner Left Logo" />
	</bannerLeft>

	<bannerRight name="Banner Right" href="https://maven.apache.org">
		<image src="images/test-image.png" alt="Banner Right Logo" />
	</bannerRight>

	<body>

		<links>
			<item name="Home" href="index.html" />
			<item name="Apache Maven" href="https://maven.apache.org" />
		</links>

		<breadcrumbs>
			<item name="Docs Home" href="https://example.org/docs" />
			<item name="Site4 Test" />
		</breadcrumbs>

		<menu name="Getting Started">
			<item name="Overview" href="index.html" />
			<item name="Features" href="features.html" />
			<item name="Installation" href="installation.html" />
		</menu>

		<menu name="Content Examples">
			<item name="Basic Content" href="basic-content.html" />
			<item name="Code Samples" href="code-samples.html" />
			<item name="Images and Media" href="images.html" />
			<item name="Tables and Lists" href="tables.html" />
		</menu>

		<menu name="Advanced">
			<item name="Nested Topics" href="advanced/index.html">
				<item name="Sub Topic A" href="advanced/topic-a.html" />
				<item name="Sub Topic B" href="advanced/topic-b.html" />
			</item>
			<item name="UI Components" href="ui-components.html" />
		</menu>

		<menu ref="reports" />

	</body>
</site>
