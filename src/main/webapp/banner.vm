*#	</div>

## On mobile, display the bannerLeft name (if any), and the breadcrumbs at the very top
#if ($site.bannerLeft.href && $site.bannerLeft.name)#*
*#	<div class="visible-xs navbar navbar-inverse site-logo site-logo-xs">
			<ul class="nav navbar-nav">
				<li><a href="$PathTool.calculateLink($site.bannerLeft.href, $relativePath)">$!site.bannerLeft.name</a></li>
			</ul>
		</div>
#end#*
*##if ($site.body.breadcrumbs)#*
*#	<div class="visible-xs navbar navbar-inverse site-logo site-logo-xs breadcrumb-xs">
			<ul class="nav navbar-nav">
#links($site.body.breadcrumbs)
			</ul>
		</div>
#end#*
		## Banner *#
		<div class="navbar site-banner">

			<div class="container-fluid">

				<div class="navbar-header" ng-class="{'show-search-xs': showSearchInput && $matchMedia.size == 'xs'}">#*

					## The Search button (only on xs displays - if search is enabled site-wide) *#
#if($showSearchUI)
					<button
						class="navbar-toggle hidden-lg hidden-md hidden-sm"
						ng-click="showSearchInput = !showSearchInput; clearSearch()"
						title="{{ showSearchInput ? 'Close the search' : 'Search' }}"
						type="button"
					>
						<i ng-class="showSearchInput ? 'fas fa-times' : 'fa fa-search'"></i>
					</button>
#end
##
## The documentation title
					<div class="navbar-brand">
#*				*##if($site.body.breadcrumbs && $site.body.breadcrumbs.size() > 0)#*
*#					<ol class="breadcrumb hidden-xs">
#links($site.body.breadcrumbs)
						</ol>
#*				*##end#*
*#					<div class="header-title">$site.name</div>
						<div class="header-subtitle">
							<span class="version-prefix">$esc.html($projectVersionText)</span>
							<span class="version">$site.getCustomValue("projectVersion", $project.version)</span>
						</div>
					</div>#*

					## The documentation title minimized (when search is on, on mobile) *#
					<div class="navbar-brand header-xxs visible-xs">
						<div class="header-title">$site.name</div>
						<div class="header-subtitle">
							$esc.html($projectVersionText) <strong>$site.getCustomValue("projectVersion", $project.version)</strong>
						</div>
					</div>#*

					## The search field (only on xs displays - if search is enabled site-wide) *#
#if($showSearchUI)
					<form class="navbar-form site-search site-search-xs visible-xs" ng-show="showSearchInput">
						<input
							type="search"
							class="form-control"
							placeholder="$esc.html($searchFieldText)"
							aria-label="$esc.html($searchFieldText)"
							ng-model="siteSearch"
							ng-change="search(siteSearch)"
							ng-model-options="{ debounce: 500 }"
							ng-keydown="handleKeyboard($event)"
							ng-focus="prefetchSearchIndex()"
							focus-me="showSearchInput"
						/>
					</form>
#end
				</div>
##
## Search field on desktop (if search is enabled site-wide)
#if($showSearchUI)
				<form class="navbar-form navbar-right site-search hidden-xs">
					<div class="form-group has-feedback">
						<input
							type="text"
							class="form-control"
							placeholder="$esc.html($searchFieldText)"
							aria-label="$esc.html($searchFieldText)"
							ng-model="siteSearch"
							ng-change="search(siteSearch)"
							ng-model-options="{ debounce: 500 }"
							ng-keydown="handleKeyboard($event)"
							ng-focus="prefetchSearchIndex()"
						/>
						<i class="fa fa-search form-control-feedback" aria-hidden="true"></i>
					</div>
				</form>
#end

			</div>
		</div>
	</header>
